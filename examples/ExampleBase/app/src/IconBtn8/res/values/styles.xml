<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HorizontallyLinedTopIconButton" parent="TopIconButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HorizontallyLinedTopIconOutlinedButton" parent="TopIconOutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TopIconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="icon">@drawable/ic_android_24px</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">36dp</item>
        <item name="iconPadding">4dp</item>
        <item name="iconTint">@android:color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="TopIconOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="icon">@drawable/ic_android_24px</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">36dp</item>
        <item name="iconPadding">4dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>
</resources>